<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EF7373"
        android:fontFamily="sans-serif"
        android:text="JAOL SYSTEM"
        android:textAlignment="center"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:textSize="25dp"


        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#EF7373"
            android:text="+"
            android:translationX="5dp"
            android:translationY="100px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Agregar producto"
            />



    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:translationY="30dp"
        android:padding="0dp"
        android:layout_margin="0dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:stretchColumns="*"
            android:translationY="100px">

            <TableRow android:layout_width="411dp"

                >

                <TextView
                    android:text="-"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />

                <TextView
                    android:text="Nombre"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />

                <TextView
                    android:text="precio"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />

                <TextView
                    android:text="Stock"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />

                <TextView
                    android:text="Proveedor"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />

                <TextView
                    android:text="Editar"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                    android:textSize="50px" />
            </TableRow>


            <TableRow android:layout_width="411dp"
                >
                <Button
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:background="#EF7373"
                    android:text="-"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
 />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Lana escolar"
                    android:textAlignment="center"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="$500"
                    android:textAlignment="center"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Lanas inc"
                    android:textAlignment="center"
                    android:textSize="50px" />

                <Button
                    android:layout_width="10dp"
                    android:background="#EF7373"
                    android:text="*"
                    android:textAlignment="center"
                    android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"

                    android:textSize="50px" />

            </TableRow>

        </TableLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout

        android:layout_width="500px"
        android:layout_height="500px"
        android:translationY="300px"
        android:translationX="70px"
        android:background="#EF7373"

        >

        <TextView
            android:layout_width="320px"
            android:layout_height="150px"
            android:translationY="50px"
            android:translationX="30px"
            android:textSize="50px"
            android:text="Productos Agregados"
            />

        <TextView
            android:layout_width="320px"
            android:layout_height="150px"
            android:text="1"
            android:textSize="100px"
            android:translationX="30px"
            android:translationY="220px" />

    </FrameLayout>


</LinearLayout>